<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstadisticasPartido">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mele"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/short_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/short_left"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="goBack"/>

    <TextView
        android:id="@+id/tituloanadirpartido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/short_left_button"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/short_left_button"
        android:text="AÑADIR PARTIDO"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/anadirpartidotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor, ingrese los siguientes datos para crear el entreno."
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tituloanadirpartido"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anadirpartidotext"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>
            <EditText
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha"
                android:layout_below="@id/nombre"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/hora_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora de inicio del partido"
                android:layout_below="@id/fecha"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/coordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ubicación en coordenadas"
                android:layout_below="@id/hora_inicio"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>
            <EditText
                android:id="@+id/ubi_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ubicación en texto"
                android:layout_below="@id/coordenadas"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>
            <EditText
                android:id="@+id/equipolocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Equipo Local"
                android:layout_below="@id/ubi_texto"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>
            <EditText
                android:id="@+id/equipovisitante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Equipo Visitante"
                android:layout_below="@id/equipolocal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/anadirpartido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir partido"
                android:background="@drawable/boton_verde"
                android:layout_below="@id/equipovisitante"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
