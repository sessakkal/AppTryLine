<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearEquipo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mele"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/short_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/short_left"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="goBack"/>

    <TextView
        android:id="@+id/registro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/short_left_button"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/short_left_button"
        android:text="REGISTRO"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/registrate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Regístrese gratis para obtener contenido exclusivo!"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registro_text"
        android:layout_marginTop="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/yatienes_layout"
        android:layout_below="@id/registrate_text"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nombre_equipo_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Del Equipo"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección de correo electrónico"
                android:layout_below="@id/nombre_equipo_edittext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_below="@id/email_edittext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>
            <EditText
                android:id="@+id/repetir_contra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repita la contraseña"
                android:inputType="textPassword"
                android:layout_below="@id/password_edittext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de Usuario"
                android:layout_below="@id/repetir_contra"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/gris_flojo"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registro_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:background="@drawable/boton_verde"
                android:layout_below="@id/nombre_usuario"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/crear_equipo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear equipo nuevo"
                android:textColor="@color/white"
                android:layout_below="@id/registro_button"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"/>

        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/yatienes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#59DD38">

        <TextView
            android:id="@+id/yatienes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="¿Ya tienes cuenta? Inicia sesión" />

    </RelativeLayout>

</RelativeLayout>
