<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mele"
    tools:context=".Calendario">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partidosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/botonLayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="75dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entrenosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/botonLayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="381dp" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption1Click"
            android:padding="2dp"
            android:src="@drawable/global_blanco" />

        <ImageView
            android:id="@+id/conversaciones"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption2Click"
            android:padding="2dp"
            android:src="@drawable/conversacion_blanco" />

        <ImageView
            android:id="@+id/calendario"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption3Click"
            android:padding="2dp"
            android:src="@drawable/calendario_verde" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption4Click"
            android:padding="2dp"
            android:src="@drawable/perfil_blanco" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_navigation"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/boton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Añadir partido" />

        <Button
            android:id="@+id/boton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Añadir entreno" />
    </LinearLayout>

</RelativeLayout>
