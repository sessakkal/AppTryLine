<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendario">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/palos_rugby"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />

    <ImageView
        android:id="@+id/imageArrowleft"
        android:layout_width="16dp"
        android:layout_height="@dimen/_16pxh"
        android:layout_marginStart="@dimen/_16pxh"
        android:layout_marginTop="@dimen/_37pxv"
        android:scaleType="fitXY"
        android:src="@drawable/short_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Opci贸n 1 -->
        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption1Click"
            android:padding="8dp"
            android:src="@drawable/casita_blanco" />

        <!-- Opci贸n 2 -->
        <ImageView
            android:id="@+id/conversaciones"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption2Click"
            android:padding="8dp"
            android:src="@drawable/conversacion_gris" />

        <!-- Opci贸n 3 -->
        <ImageView
            android:id="@+id/calendario"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onOption3Click"
            android:padding="8dp"
            android:src="@drawable/calendario_gris" />

        <!-- Opci贸n 4 -->
        <ImageView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/perfil_gris"
            android:clickable="true"
            android:onClick="onOption4Click"
            android:padding="8dp" />

    </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:datePickerMode="calendar"
        android:firstDayOfWeek="1"
        android:selectedWeekBackgroundColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
